{
  "compilerOptions": {
    "target": "ES2020", // Modern JS output
    "module": "CommonJS", // Use Node-style imports/exports
    "moduleResolution": "Node", // Required for CommonJS
    "outDir": "dist", // Compiled JS goes here
    "rootDir": "src", // Your TS source files
    "esModuleInterop": true, // Allows import express from "express"
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"], // Only compile src folder
  "exclude": ["node_modules", "dist"] // Ignore node_modules & dist
}
